    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug IoT",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\iot",
            "program": "${workspaceFolder}\\iot\\dist\\index.js",
            "runtimeArgs": [
                "--unhandled-rejections=strict",
            ],
            "preLaunchTask": "build-iot",
            "outFiles": [
                "${workspaceFolder}/iot/dist/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\server",
            "program": "${workspaceFolder}\\server\\dist\\index.js",
            "runtimeArgs": [
                "--unhandled-rejections=strict"
            ],
            "preLaunchTask": "build-server",
            "outFiles": [
                "${workspaceFolder}/server/dist/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std" //to capture winston console logs
        },
        {
            "name": "Debug Core Tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}\\core",
            "runtimeArgs": [
                "--inspect-brk",
                "./node_modules/jest/bin/jest.js",
                "--runInBand",
                "--coverage",
                "false"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}