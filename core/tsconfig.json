{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true, //I don't think we need this but it gets rid of a warning with jest
        "declaration": true,
        "declarationMap": true,
        "rootDir": "src",
        "noEmitOnError": true,
        "strict": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "importHelpers": true,
        "outDir": "dist/esm",
        "types": [
            "jest"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}