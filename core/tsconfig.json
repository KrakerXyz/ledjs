{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ES2020",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "rootDir": "src",
        "noEmitOnError": true,
        "strict": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "importHelpers": true,
        "outDir": "dist/esm"
    },
    "include": [
        "./src/**/*"
    ]
}