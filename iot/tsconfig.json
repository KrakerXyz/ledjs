{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "removeComments": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
        "../core/src/**/*",
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "../core/src/**/*.spec.ts",
    ],
}