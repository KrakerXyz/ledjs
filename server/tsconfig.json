{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "resolveJsonModule": true, // Allows importing JSON files (used by schemas)
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "removeComments": true,
        "outDir": "dist",
        "lib": [
            "ESNext"
        ],
    },
    "include": [
        "src/**/*",
        "../core/src/**/*",
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "../core/src/**/*.spec.ts",
    ],
}