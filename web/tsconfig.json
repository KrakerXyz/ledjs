{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true, //ensures that import casing matches physical file name 
        "importHelpers": true,
        "removeComments": true,
        "jsx": "preserve", //needed for volar
        "outDir": "./dist",
        "rootDirs": [
            "src"
        ],
        "lib": [
            "esnext",
            "DOM"
        ],
        "baseUrl": ".",
        "paths": {
            "$src/*": [
                "./src/*"
            ],
            "$core/*": [
                "../core/src/*"
            ],
        },
    },
    "include": [
        "src/**/*",
        "../core/src/**/*",
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "../core/src/**/*.spec.ts",
    ],
}